<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/scanner_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.xiamubobby.camera2test.ScannerFragment">

    <ScrollView
        android:layout_width="@dimen/scanner_width"
        android:layout_height="@dimen/scanner_width">

        <FrameLayout
            android:layout_width="@dimen/scanner_width"
            android:layout_height="@dimen/scanner_width">

            <TextureView
                android:layout_width="@dimen/scanner_width"
                android:layout_height="@dimen/scanner_height"
                android:id="@+id/scanner_texture_view" />

        </FrameLayout>

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="openCamera"
        android:onClick="openCamera"
        android:background="@drawable/cam2tst_ripple"
        android:elevation="20dp" />

</LinearLayout>


